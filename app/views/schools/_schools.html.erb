<div class="row">
    <div class="col-md-12"><h2>Hey! Looks like there are some schools near you :)</h2></div>
   <% @schools.each do |school| %>
       <div class="col-sm-6 col-md-4">
      <div class="panel panel-default">
           <div class="panel-heading"><a href="#" class="pull-right">View all</a> <h4><%= school.name %></h4></div>
        <div class="panel-body">
            <% if school.image_url.nil? %>
              <%= image_tag("school_children.jpg", size:"250x250", class: 'img-circle center-block') %>
            <% else %>
              <%= image_tag(@school.image_url(:thumb), class: 'img-circle center-block') %> 
            <% end %>
              
              <div class="clearfix"></div>
              <hr>
              <p>Some Lorem shit, but should hold a brief description
              </p>
              <h5><%= link_to "View More details", school_path(school) %></h5>
              
            </div>
         </div> 
    </div>
   <% end  %>
  <%= will_paginate @schools %>
    </div>
    

