<div class="col-md-6 col-md-offset-3">
	<div class="new-book-form">		<h2>Edit School</h2>
		<%= form_for (@school), html: {multipart: true} do |f| %>
			<%=f.label :name %>
			<%= f.text_field :name, class: 'form-control'  %>

			<%= f.label :address %>
			<%= f.text_field :address, class:'form-control' %>

			<%= f.label :fees %>
			<%= f.text_field :fees, class:'form-control' %>

			<%= f.label :state %>
			<%= f.text_field :state, class:'form-control' %>

			<%= f.file_field :image, value: "School Image", accept: 'image/jpeg,image/gif,image/png' %>
			<%= f.hidden_field :image_cache %>

			<%= f.submit "Save School", class:'btn-custom2' %>
<% end %>
</div>
</div>