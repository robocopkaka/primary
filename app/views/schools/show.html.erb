<% if @school.image_url.nil? %>
  <%= render 'schools/has_no_picture' %>
<% else %>
  <%= render 'schools/has_picture' %>
<%  end %>

<%= form_for [@school, Comment.new] do |f| %>
  <%= f.text_field :body, {placeholder: 'Add a comment', class:'form-control'} %> <br/>
  <%= f.submit "Add comment", class:'form-control' %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @school.comments) %>
</ul>